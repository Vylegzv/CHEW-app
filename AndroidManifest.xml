    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="com.vanderbilt.isis.chew.db.ChewContentProvider"
            android:authorities="com.vanderbilt.isis.chew.provider"
            android:exported="false" />

        <activity
            android:name="com.vanderbilt.isis.chew.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecipesActivity" />
        <activity android:name=".FavRecipesActivity" />
        <activity android:name=".RecipeActivity" />
        <activity android:name=".ShoppingList" />
        <activity android:name=".VoucherUpload" />
        <activity
            android:name=".GetProducts"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".MembersListView" />
        <activity
            android:name=".Profile"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".InCartRegular"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".InCartCash"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Produce"
            android:configChanges="orientation|keyboardHidden|screenSize" />
    </application>

</manifest>