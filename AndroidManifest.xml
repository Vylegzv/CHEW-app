<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vanderbilt.isis.chew"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- Pankaj Chand's permissions -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="com.vanderbilt.isis.chew.db.ChewContentProvider"
            android:authorities="com.vanderbilt.isis.chew.provider"
            android:exported="false" />

        <activity
            android:name="com.vanderbilt.isis.chew.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RecipesActivity" />
        <activity android:name=".FavRecipesActivity" />
        <activity android:name=".RecipeActivity" />
        <activity android:name=".ShoppingList" />
        <activity android:name=".VoucherUpload" />
        <activity android:name=".VouchersListView" />
        <activity android:name=".VoucherDescription" />
        <activity
            android:name=".GetProducts"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity android:name=".MembersListView" />
        <activity
            android:name=".Profile"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".InCartRegular"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".InCartCash"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        <activity
            android:name=".Produce"
            android:configChanges="orientation|keyboardHidden|screenSize" />
        
        <!-- Pankaj Chand's Components -->
        
        <receiver android:enabled="true" android:name=".notificationmsg.BootCompleteBroadcastReceiver"
         android:permission="android.permission.RECEIVE_BOOT_COMPLETED">
             <intent-filter>
	         <action android:name="android.intent.action.BOOT_COMPLETED" />
	        <category android:name="android.intent.category.DEFAULT" />
             </intent-filter>
        </receiver>
        
        <receiver android:enabled="true" android:name=".notificationmsg.AlarmReceiver">
             <intent-filter>
	         <action android:name="com.vanderbilt.isis.chew.notificationmsg.ACTION_SEND_NOTIFICATION" />
             </intent-filter>
        </receiver>
        
        <service android:name=".notificationmsg.SetAlarmService" android:process=":myProcess1"/>
        <service android:name=".notificationmsg.SendNotificationService" android:process=":myProcess2"/>
        <provider android:name="com.vanderbilt.isis.chew.notificationmsg.NotificationProvider" android:authorities="com.vanderbilt.isis.chew.notificationmsg.NotificationProvider" />
        
        <activity android:name=".notificationmsg.ConfigurationActivity"/>
        <activity android:name=".notificationmsg.NotificationDialogActivity" android:theme="@android:style/Theme.Translucent"
            android:excludeFromRecents="true" android:noHistory="true" />
        <activity android:name=".notificationmsg.NotificationHistoryActivity"/>
    </application>

</manifest>